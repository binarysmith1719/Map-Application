<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            mapbox:mapbox_cameraZoom="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></com.mapbox.maps.MapView>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_style_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/little_blue"
        android:onClick="horizontalView"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck"></com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/little_blue"
        android:onClick="onActionbtnclick2"
        android:src="@drawable/dustbin_del"
        app:layout_constraintBottom_toTopOf="@+id/fab_style_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck"></com.google.android.material.floatingactionbutton.FloatingActionButton>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/globe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/little_blue"
        android:onClick="globe"
        android:src="@drawable/grid"
        app:layout_constraintBottom_toTopOf="@+id/fab_del"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck"></com.google.android.material.floatingactionbutton.FloatingActionButton>
     <TextView
         android:id="@+id/txtLeft"
         android:text="PREV"
         android:textStyle="italic"
         android:textSize="20sp"
         android:textColor="@color/black"
         android:padding="10dp"
         android:layout_marginLeft="20dp"
         android:layout_marginBottom="20dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:onClick="onLeftClick"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:backgroundTint="@color/little_blue"
         android:background="@drawable/btn_backgrnd"
         ></TextView>

    <TextView
        android:text="NEXT"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toEndOf="@id/txtLeft"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onRightClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/little_blue"
        android:background="@drawable/btn_backgrnd"
        ></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>